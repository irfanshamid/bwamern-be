<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="show-item-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4 pt-3">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>No.</th>
                <th>Title</th>
                <th>Price</th>
                <th>Country</th>
                <th>City</th>
                <th>Action</th>
  
              </tr>
            </thead>
            <tbody>
              <% for(let i = 0; i < item.length; i++){ %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= item[i].title %></td>
                  <td>$<%= item[i].price %> USD</td>
                  <td><%= item[i].country %></td>
                  <td><%= item[i].city %></td>
                  <td>
                    <form action="/admin/item/<%= item[i].id %>?_method=DELETE" method="POST">
                      <a href="javascript:void()" class="btn btn-warning btn-sm btn-circle button-update"
                      data-id="<%= item[i].id %>" data-name="<%= item[i].name %>" >
                        <i class="fas fa-pen"></i>
                      </a>
                      <button type="submit" class="btn btn-danger btn-sm btn-circle"><i class="fas fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
              <% } %>
          </tbody>
          </table>
        </div>
      </div>
    </div>
</div>